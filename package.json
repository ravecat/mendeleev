{
  "private": true,
  "name": "mendeleev",
  "version": "0.4.0",
  "author": "Max Sharov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/rvct/mendeleev.git"
  },
  "bugs": {
    "url": "https://gitlab.com/rvct/mendeleev/issues"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "commit": "./node_modules/cz-customizable/standalone.js",
    "test2": "jest -c .config/jest.config.js --passWithNoTests",
    "test:commit": "commitlint -g .config/commitlint.config.js --from=HEAD~1",
    "typecheck": "tsc --noEmit",
    "lint:eslint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "lint:stylelint": "stylelint '**/*.{js,jsx,ts,tsx,css}'",
    "lint": "yarn lint:eslint && yarn lint:stylelint",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:stylelint",
    "release": "semantic-release --extends .config/.releaserc.js",
    "prettier": "prettier --check *.{md,yml,json}"
  },
  "dependencies": {
    "ramda": "^0.27.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router5": "^8.0.1",
    "react-scripts": "^4.0.0",
    "router5": "^8.0.1",
    "styled-components-toolbox": "^0.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/gitlab": "^6.0.9",
    "@semantic-release/npm": "^7.0.10",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/ramda": "^0.27.38",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "customize-cra": "^1.0.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react-app-rewired": "^2.1.8",
    "semantic-release": "^17.3.7",
    "sirv-cli": "^1.0.0-next.3",
    "styled-components": "^5.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^4.1.3",
    "yarn": "^1.22.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -v && yarn typecheck && yarn test",
      "commit-msg": "commitlint -g .config/commitlint.config.js -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "yarn lint:fix"
    ],
    "*.{md,yml,json}": [
      "yarn prettier --write"
    ]
  },
  "config": {
    "cz-customizable": {
      "config": ".config/commitizen.config.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
